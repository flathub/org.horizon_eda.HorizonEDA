{
    "app-id": "org.horizon_eda.HorizonEDA",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.34",
    "sdk": "org.gnome.Sdk",
    "command": "horizon-eda",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home",
        "--device=dri"
    ],
    "cleanup": [
        "*.a",
        "*.la",
        "/include",
        "/lib/*/*.h",
        "/share/oce-0.18",
        "/share/pkgconfig",
        "/lib/atkmm-1.6",
        "/lib/cairomm-1.0",
        "/lib/gdkmm-3.0",
        "/lib/giomm-2.4",
        "/lib/glibmm-2.4",
        "/lib/gtkmm-3.0",
        "/lib/oce-0.18",
        "/lib/pangomm-1.4",
        "/lib/pkgconfig",
        "/lib/cmake",
        "/lib/sigc++-3.0",
        "/lib/sigc++-2.0"
    ],
    "modules": [
        {
           "name": "mm-common",
           "cleanup": [ "*" ],
           "sources": [
               {
                   "type": "archive",
                   "url": "https://download.gnome.org/sources/mm-common/1.0/mm-common-1.0.0.tar.xz",
                   "sha256": "b97d9b041e5952486cab620b44ab09f6013a478f43b6699ae899b8a4da189cd4"
               }
           ]
        },
        {
            "name": "sigc++",
            "config-opts": [ "--disable-documentation" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libsigc++/2.10/libsigc++-2.10.3.tar.xz",
                    "sha256": "0b68dfc6313c6cc90ac989c6d722a1bf0585ad13846e79746aa87cb265904786"
                }
            ]
        },
        {
            "name": "glibmm",
            "config-opts": [ "--disable-documentation" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/glibmm/2.64/glibmm-2.64.2.tar.xz",
                    "sha256": "a75282e58d556d9b2bb44262b6f5fb76c824ac46a25a06f527108bec86b8d4ec"
                }
            ]
        },
        {
            "name": "cairomm",
            "config-opts": [ "--disable-documentation" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/cairomm/1.12/cairomm-1.12.0.tar.xz",
                    "sha256": "a54ada8394a86182525c0762e6f50db6b9212a2109280d13ec6a0b29bfd1afe6"
                }
            ]
        },
        {
            "name": "pangomm",
            "config-opts": [ "--disable-documentation" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/pangomm/2.42/pangomm-2.42.1.tar.xz",
                    "sha256": "14bf04939930870d5cfa96860ed953ad2ce07c3fd8713add4a1bfe585589f40f"
                }
            ]
        },
        {
            "name": "atkmm",
            "config-opts": [ "--disable-documentation" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/atkmm/2.28/atkmm-2.28.0.tar.xz",
                    "sha256": "4c4cfc917fd42d3879ce997b463428d6982affa0fb660cafcc0bc2d9afcedd3a"
                }
            ]
        },
        {
            "name": "gtkmm",
            "config-opts": [ "--disable-documentation" ],
            "build-options": { "cxxflags": "-O2 -g -std=c++11" },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gtkmm/3.24/gtkmm-3.24.2.tar.xz",
                    "sha256": "6d71091bcd1863133460d4188d04102810e9123de19706fb656b7bb915b4adc3"
                }
            ]
        },
        {
          "name": "libzip",
          "buildsystem": "cmake-ninja",
          "cleanup": [ "/bin", "/share" ],
          "sources": [
            {
              "type": "archive",
              "url": "https://libzip.org/download/libzip-1.7.3.tar.xz",
              "sha256": "a60473ffdb7b4260c08bfa19c2ccea0438edac11193c3afbbb1f17fbcf6c6132"
            }
          ]
        },
        {
          "name": "zeromq",
          "config-opts": ["--disable-static"],
          "cleanup": [ "/bin", "/share" ],
          "sources": [
            {
              "type": "archive",
              "url": "https://github.com/zeromq/libzmq/releases/download/v4.3.2/zeromq-4.3.2.tar.gz",
              "sha256": "ebd7b5c830d6428956b67a0454a7f8cbed1de74b3b01e5c33c5378e22740f763"
            }
          ]
        },
        {
            "name": "libgit2",
            "buildsystem": "cmake",
            "config-opts": [ "-DBUILD_SHARED_LIBS:BOOL=ON",
                             "-DTHREADSAFE=ON" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/libgit2/libgit2/archive/v1.0.1.tar.gz",
                    "sha256": "1775427a6098f441ddbaa5bd4e9b8a043c7401e450ed761e69a415530fea81d2"
                }
            ]
        },
        {
            "name": "glm",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/g-truc/glm/releases/download/0.9.9.5/glm-0.9.9.5.zip",
                    "sha256": "4fe34860ce69156f63eea6c3d84c91cadfc330353cf275ff394aef4e163cafee"
                }
            ],
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DGLM_TEST_ENABLE=OFF",
                "-DCMAKE_INSTALL_LIBDIR=lib"
            ]
        },
        {
            "name": "boost",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://dl.bintray.com/boostorg/release/1.72.0/source/boost_1_72_0.tar.bz2",
                    "sha256": "59c9b274bc451cf91a9ba1dd2c7fdcaf5d60b1b3aa83f2c9fa143417cc660722"
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "./bootstrap.sh --prefix=/app --with-libraries=context,date_time,filesystem,iostreams,locale,program_options,regex,system,thread,test",
                "./b2 -j $FLATPAK_BUILDER_N_JOBS install"
            ]
        },
        {
            "name": "OCE",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/tpaviot/oce/archive/OCE-0.18.3.tar.gz",
                    "sha256": "c553d6a7bf52f790abc3b6bb7a1e91a65947e92a426bb1a88a11960c31f0966c"
                }
            ],
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DOCE_INSTALL_PREFIX=/app",
                "-DOCE_VISUALISATION=OFF"
            ]
        },
        {
          "name": "cppzmq",
          "buildsystem": "cmake-ninja",
          "cleanup": [ "/bin", "/share" ],
          "config-opts": [
            "-DCPPZMQ_BUILD_TESTS=OFF"
          ],
          "sources": [
            {
              "type": "archive",
              "url": "https://github.com/zeromq/cppzmq/archive/v4.6.0.tar.gz",
              "sha256": "e9203391a0b913576153a2ad22a2dc1479b1ec325beb6c46a3237c669aef5a52"
            }
          ]
        },
        {
          "name": "podofo",
          "buildsystem": "cmake-ninja",
          "cleanup": [ "/bin", "/share", "/lib/pkgconfig"],
          "config-opts": [
            "-DPODOFO_BUILD_LIB_ONLY=1",
            "-DPODOFO_BUILD_SHARED=1",
            "-DPODOFO_BUILD_STATIC=0"
          ],
          "sources": [
            {
              "type": "archive",
              "url": "https://downloads.sourceforge.net/project/podofo/podofo/0.9.6/podofo-0.9.6.tar.gz",
              "sha256": "e9163650955ab8e4b9532e7aa43b841bac45701f7b0f9b793a98c8ca3ef14072"
            }
          ]
        },
        {
            "name": "horizon-eda",
            "buildsystem": "simple",
            "build-commands": [
                "make -j $FLATPAK_BUILDER_N_JOBS INC_OCE=-I/app/include/oce",
                "make PREFIX=/app/ install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/horizon-eda/horizon/archive/v1.2.1.tar.gz",
                    "sha256": "3c0d66afeec55cf7fffbb25a467f7aac1576a5f93fec1f461d7f8a3e20072365"
                }
            ]
        }

    ]
}
