{
    "app-id": "org.horizon_eda.HorizonEDA",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "horizon-eda",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home",
        "--device=dri",
        "--filesystem=/run/spnav.sock:ro",
        "--env=SPNAV_SOCKET=/run/spnav.sock"
    ],
    "cleanup": [
        "*.a",
        "*.la",
        "/include",
        "/lib/*/*.h",
        "/share/oce-0.18",
        "/share/pkgconfig",
        "/lib/atkmm-1.6",
        "/lib/cairomm-1.0",
        "/lib/gdkmm-3.0",
        "/lib/giomm-2.4",
        "/lib/glibmm-2.4",
        "/lib/gtkmm-3.0",
        "/lib/oce-0.18",
        "/lib/pangomm-1.4",
        "/lib/pkgconfig",
        "/lib/cmake",
        "/lib/sigc++-3.0",
        "/lib/sigc++-2.0"
    ],
    "modules": [
        {
           "name": "mm-common",
           "cleanup": [ "*" ],
           "sources": [
               {
                   "type": "archive",
                   "url": "https://download.gnome.org/sources/mm-common/1.0/mm-common-1.0.4.tar.xz",
                   "sha256": "e954c09b4309a7ef93e13b69260acdc5738c907477eb381b78bb1e414ee6dbd8"
               }
           ]
        },
        {
            "name": "sigc++",
            "config-opts": [ "--disable-documentation" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libsigc++/2.10/libsigc++-2.10.8.tar.xz",
                    "sha256": "235a40bec7346c7b82b6a8caae0456353dc06e71f14bc414bcc858af1838719a"
                }
            ]
        },
        {
            "name": "glibmm",
            "config-opts": [ "-Dbuild-documentation=false" ],
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/glibmm/2.66/glibmm-2.66.1.tar.xz",
                    "sha256": "69bd6b5327716ca2f511ab580a969fd7bf0cd2c24ce15e1d0e530592d3ff209c"
                }
            ]
        },
        {
            "name": "cairomm",
            "config-opts": [ "--disable-documentation" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.cairographics.org/releases/cairomm-1.14.3.tar.xz",
                    "sha256": "0d37e067c5c4ca7808b7ceddabfe1932c5bd2a750ad64fb321e1213536297e78"
                }
            ]
        },
        {
            "name": "pangomm",
            "config-opts": [ "-Dbuild-documentation=false" ],
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/pangomm/2.46/pangomm-2.46.2.tar.xz",
                    "sha256": "57442ab4dc043877bfe3839915731ab2d693fc6634a71614422fb530c9eaa6f4"
                }
            ]
        },
        {
            "name": "atkmm",
            "config-opts": [ "-Dbuild-documentation=false" ],
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/atkmm/2.28/atkmm-2.28.2.tar.xz",
                    "sha256": "a0bb49765ceccc293ab2c6735ba100431807d384ffa14c2ebd30e07993fd2fa4"
                }
            ]
        },
        {
            "name": "gtkmm",
            "config-opts": [ "-Dbuild-documentation=false" ],
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gtkmm/3.24/gtkmm-3.24.5.tar.xz",
                    "sha256": "856333de86689f6a81c123f2db15d85db9addc438bc3574c36f15736aeae22e6"
                }
            ]
        },
        {
            "name": "libarchive",
            "cleanup": ["/include", "/share", "/bin"],
            "config-opts": [ "--prefix=/app", "--disable-static", "--without-xml2", "--without-nettle" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.libarchive.org/downloads/libarchive-3.6.1.tar.gz",
                    "sha256": "c676146577d989189940f1959d9e3980d28513d74eedfbc6b7f15ea45fe54ee2"
                }
            ]
        },
        {
          "name": "zeromq",
          "config-opts": ["--disable-static"],
          "cleanup": [ "/bin", "/share" ],
          "sources": [
            {
              "type": "archive",
              "url": "https://github.com/zeromq/libzmq/releases/download/v4.3.4/zeromq-4.3.4.tar.gz",
              "sha256": "c593001a89f5a85dd2ddf564805deb860e02471171b3f204944857336295c3e5"
            }
          ]
        },
        {
            "name": "libgit2",
            "buildsystem": "cmake",
            "config-opts": [ "-DBUILD_SHARED_LIBS:BOOL=ON",
                             "-DTHREADSAFE=ON",
                             "-DCMAKE_BUILD_TYPE=None",
                             "-Wno-dev" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/libgit2/libgit2/archive/v1.4.3.tar.gz",
                    "sha256": "f48b961e463a9e4e7e7e58b21a0fb5a9b2a1d24d9ba4d15870a0c9b8ad965163"
                }
            ]
        },
        {
            "name": "glm",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/g-truc/glm/releases/download/0.9.9.5/glm-0.9.9.5.zip",
                    "sha256": "4fe34860ce69156f63eea6c3d84c91cadfc330353cf275ff394aef4e163cafee"
                }
            ],
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DGLM_TEST_ENABLE=OFF",
                "-DCMAKE_INSTALL_LIBDIR=lib"
            ]
        },
        {
            "name": "boost",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://boostorg.jfrog.io/artifactory/main/release/1.78.0/source/boost_1_78_0.tar.bz2",
                    "sha256": "8681f175d4bdb26c52222665793eef08490d7758529330f98d3b29dd0735bccc"
                }
            ],
            "buildsystem": "simple",
            "cleanup": [ "/lib" ],
            "build-commands": [
                "./bootstrap.sh --prefix=/app --with-libraries=context,date_time,filesystem,iostreams,locale,program_options,regex,system,thread,test",
                "./b2 -j $FLATPAK_BUILDER_N_JOBS install"
            ]
        },
        {
            "name": "libXmu",
            "cleanup": [ "/share", "/lib" ],
            "sources": [
            {
              "type": "archive",
              "url": "https://www.x.org/archive//individual/lib/libXmu-1.1.3.tar.gz",
              "sha256": "5bd9d4ed1ceaac9ea023d86bf1c1632cd3b172dce4a193a72a94e1d9df87a62e"
            }
          ]
        },
        {
            "name": "opencascade",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://git.dev.opencascade.org/gitweb/?p=occt.git;a=snapshot;h=refs/tags/V7_6_0;sf=tgz",
                    "dest-filename": "opencascade.tgz",
                    "sha256": "e7f989d52348c3b3acb7eb4ee001bb5c2eed5250cdcceaa6ae97edc294f2cabd"
                }
            ],
            "buildsystem": "cmake-ninja",
            "cleanup": [ "/share" ],
            "config-opts": [
                "-DCMAKE_INSTALL_PREFIX=/app",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DBUILD_LIBRARY_TYPE=Shared",
                "-DBUILD_Inspector=OFF",
                "-DBUILD_DOC_Overview=OFF",
                "-DBUILD_MODULE_ApplicationFramework=ON",
                "-DBUILD_MODULE_DataExchange=ON",
                "-DBUILD_MODULE_Draw=OFF",
                "-DBUILD_MODULE_FoundationClasses=ON",
                "-DBUILD_MODULE_ModelingAlgorithms=ON",
                "-DBUILD_MODULE_ModelingData=ON",
                "-DBUILD_MODULE_Visualization=OFF",
                "-DUSE_VTK=OFF",
                "-DUSE_TBB=OFF",
                "-DINSTALL_FREETYPE=OFF",
                "-DINSTALL_SAMPLES=OFF",
                "-DINSTALL_TEST_CASES=OFF"
            ]
        },
        {
          "name": "cppzmq",
          "buildsystem": "cmake-ninja",
          "cleanup": [ "/bin", "/share" ],
          "config-opts": [
            "-DCPPZMQ_BUILD_TESTS=OFF"
          ],
          "sources": [
            {
              "type": "archive",
              "url": "https://github.com/zeromq/cppzmq/archive/v4.8.1.tar.gz",
              "sha256": "7a23639a45f3a0049e11a188e29aaedd10b2f4845f0000cf3e22d6774ebde0af"
            }
          ]
        },
        {
          "name": "podofo",
          "buildsystem": "cmake-ninja",
          "cleanup": [ "/bin", "/share", "/lib/pkgconfig"],
          "config-opts": [
            "-DPODOFO_BUILD_LIB_ONLY=1",
            "-DPODOFO_BUILD_SHARED=1",
            "-DPODOFO_BUILD_STATIC=0"
          ],
          "sources": [
            {
              "type": "archive",
              "url": "https://downloads.sourceforge.net/project/podofo/podofo/0.9.7/podofo-0.9.7.tar.gz",
              "sha256": "7cf2e716daaef89647c54ffcd08940492fd40c385ef040ce7529396bfadc1eb8"
            }
          ]
        },
        {
            "name": "libspnav",
            "config-opts": ["--prefix=/app", "--disable-debug"],
            "sources": [
            {
              "type": "archive",
              "url": "https://github.com/FreeSpacenav/libspnav/archive/v1.0/libspnav-1.0.tar.gz",
              "sha256": "8849b7f7826d750f6956cf8f4f53937f2359ab6da97d6c834c71d5f771212e7c"
            }
          ]
        },
        {
            "name": "horizon-eda",
            "buildsystem": "simple",
            "build-commands": [
                "make -j $FLATPAK_BUILDER_N_JOBS WITH_SPNAV=1 INC_OCE=-I/app/include/opencascade LDFLAGS=\"-lm -lpthread\"",
                "make PREFIX=/app/ install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/horizon-eda/horizon/archive/refs/tags/v2.2.90.tar.gz",
                    "sha256": "fda0e0630b73b1439189d1bdcd43988bcfa724740978301c2991f6d061ec8b1e"
                }
            ]
        }

    ]
}
