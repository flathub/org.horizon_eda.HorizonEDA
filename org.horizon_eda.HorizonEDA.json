{
    "app-id": "org.horizon_eda.HorizonEDA",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "horizon-eda",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home",
        "--device=dri",
        "--filesystem=/run/spnav.sock:ro",
        "--env=SPNAV_SOCKET=/run/spnav.sock"
    ],
    "cleanup": [
        "*.a",
        "*.la",
        "/include",
        "/lib/*/*.h",
        "/share/oce-0.18",
        "/share/pkgconfig",
        "/lib/atkmm-1.6",
        "/lib/cairomm-1.0",
        "/lib/gdkmm-3.0",
        "/lib/giomm-2.4",
        "/lib/glibmm-2.4",
        "/lib/gtkmm-3.0",
        "/lib/oce-0.18",
        "/lib/pangomm-1.4",
        "/lib/pkgconfig",
        "/lib/cmake",
        "/lib/sigc++-3.0",
        "/lib/sigc++-2.0"
    ],
    "modules": [
        {
           "name": "mm-common",
           "cleanup": [ "*" ],
           "sources": [
               {
                   "type": "archive",
                   "url": "https://download.gnome.org/sources/mm-common/1.0/mm-common-1.0.6.tar.xz",
                   "sha256": "b55c46037dbcdabc5cee3b389ea11cc3910adb68ebe883e9477847aa660862e7"
               }
           ]
        },
        {
            "name": "sigc++",
            "config-opts": [ "--disable-documentation" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libsigc++/2.12/libsigc++-2.12.1.tar.xz",
                    "sha256": "a9dbee323351d109b7aee074a9cb89ca3e7bcf8ad8edef1851f4cf359bd50843"
                }
            ]
        },
        {
            "name": "glibmm",
            "config-opts": [ "-Dbuild-documentation=false" ],
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/glibmm/2.66/glibmm-2.66.8.tar.xz",
                    "sha256": "64f11d3b95a24e2a8d4166ecff518730f79ecc27222ef41faf7c7e0340fc9329"
                }
            ]
        },
        {
            "name": "cairomm",
            "config-opts": [ "--disable-documentation" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.cairographics.org/releases/cairomm-1.14.5.tar.xz",
                    "sha256": "70136203540c884e89ce1c9edfb6369b9953937f6cd596d97c78c9758a5d48db"
                }
            ]
        },
        {
            "name": "pangomm",
            "config-opts": [ "-Dbuild-documentation=false" ],
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/pangomm/2.46/pangomm-2.46.4.tar.xz",
                    "sha256": "b92016661526424de4b9377f1512f59781f41fb16c9c0267d6133ba1cd68db22"
                }
            ]
        },
        {
            "name": "atkmm",
            "config-opts": [ "-Dbuild-documentation=false" ],
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/atkmm/2.28/atkmm-2.28.4.tar.xz",
                    "sha256": "0a142a8128f83c001efb8014ee463e9a766054ef84686af953135e04d28fdab3"
                }
            ]
        },
        {
            "name": "gtkmm",
            "config-opts": [ "-Dbuild-documentation=false" ],
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gtkmm/3.24/gtkmm-3.24.10.tar.xz",
                    "sha256": "7ab7e2266808716e26c39924ace1fb46da86c17ef39d989624c42314b32b5a76"
                }
            ]
        },
        {
            "name": "libarchive",
            "cleanup": ["/include", "/share", "/bin"],
            "config-opts": ["--disable-static", "--without-xml2", "--without-nettle" ],
            "post-install" :['sed -i "s/iconv //" /app/lib/pkgconfig/libarchive.pc'],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.libarchive.org/downloads/libarchive-3.8.0.tar.gz",
                    "sha256": "191b5b24811499d5c2e5efa3248975fa6daa5e6a227700cc7b8e54d6d7c06eef"
                }
            ]
        },
        {
          "name": "zeromq",
          "config-opts": ["--disable-static", "--disable-Werror"],
          "cleanup": [ "/bin", "/share" ],
          "sources": [
            {
              "type": "archive",
              "url": "https://github.com/zeromq/libzmq/releases/download/v4.3.5/zeromq-4.3.5.tar.gz",
              "sha256": "6653ef5910f17954861fe72332e68b03ca6e4d9c7160eb3a8de5a5a913bfab43"
            }
          ]
        },
        {
            "name": "libgit2",
            "buildsystem": "cmake-ninja",
            "config-opts": [ "-DBUILD_SHARED_LIBS:BOOL=ON",
                             "-DTHREADSAFE=ON",
                             "-DCMAKE_BUILD_TYPE=Release",
                             "-Wno-dev" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/libgit2/libgit2/archive/v1.9.0.tar.gz",
                    "sha256": "75b27d4d6df44bd34e2f70663cfd998f5ec41e680e1e593238bbe517a84c7ed2"
                }
            ]
        },
        {
            "name": "glm",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/g-truc/glm/archive/refs/tags/1.0.1.zip",
                    "sha256": "09c5716296787e1f7fcb87b1cbdbf26814ec1288ed6259ccd30d5d9795809fa5"
                }
            ],
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DGLM_TEST_ENABLE=OFF",
                "-DCMAKE_INSTALL_LIBDIR=lib"
            ]
        },
        {
            "name": "libXmu",
            "cleanup": [ "/share", "/lib" ],
            "sources": [
            {
              "type": "archive",
              "url": "https://www.x.org/archive//individual/lib/libXmu-1.2.1.tar.gz",
              "sha256": "bf0902583dd1123856c11e0a5085bd3c6e9886fbbd44954464975fd7d52eb599"
            }
          ]
        },
        {
            "name": "opencascade",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://git.dev.opencascade.org/gitweb/?p=occt.git;a=snapshot;h=refs/tags/V7_8_1;sf=tgz",
                    "dest-filename": "opencascade.tgz",
                    "sha256": "33f2bdb67e3f6ae469f3fa816cfba34529a23a9cb736bf98a32b203d8531c523"
                },
                {
                    "type":"patch",
                    "paths":["ft_outline.patch"]
                }
            ],
            "buildsystem": "cmake-ninja",
            "cleanup": [ "/share" ],
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DBUILD_RELEASE_DISABLE_EXCEPTIONS=OFF",
                "-DBUILD_LIBRARY_TYPE=Shared",
                "-DBUILD_Inspector=OFF",
                "-DBUILD_DOC_Overview=OFF",
                "-DBUILD_MODULE_ApplicationFramework=ON",
                "-DBUILD_MODULE_DataExchange=ON",
                "-DBUILD_MODULE_Draw=OFF",
                "-DBUILD_MODULE_FoundationClasses=ON",
                "-DBUILD_MODULE_ModelingAlgorithms=ON",
                "-DBUILD_MODULE_ModelingData=ON",
                "-DBUILD_MODULE_Visualization=OFF",
                "-DUSE_VTK=OFF",
                "-DUSE_TBB=OFF",
                "-DINSTALL_FREETYPE=OFF",
                "-DINSTALL_SAMPLES=OFF",
                "-DINSTALL_TEST_CASES=OFF"
            ]
        },
        {
          "name": "cppzmq",
          "buildsystem": "cmake-ninja",
          "cleanup": [ "/bin", "/share" ],
          "config-opts": [
            "-DCPPZMQ_BUILD_TESTS=OFF"
          ],
          "sources": [
            {
              "type": "archive",
              "url": "https://github.com/zeromq/cppzmq/archive/v4.10.0.tar.gz",
              "sha256": "c81c81bba8a7644c84932225f018b5088743a22999c6d82a2b5f5cd1e6942b74"
            }
          ]
        },
        {
          "name": "podofo",
          "buildsystem": "cmake-ninja",
          "cleanup": [ "/bin", "/share", "/lib/pkgconfig"],
          "config-opts": [
            "-DPODOFO_BUILD_LIB_ONLY=1"
          ],
          "sources": [
            {
              "type": "archive",
              "url": "https://github.com/podofo/podofo/archive/refs/tags/0.10.4.tar.gz",
              "sha256": "6b1b13cdfb2ba5e8bbc549df507023dd4873bc946211bc6942183b8496986904"
            }
          ]
        },
        {
            "name": "libspnav",
            "config-opts": ["--disable-debug"],
            "sources": [
            {
              "type": "archive",
              "url": "https://github.com/FreeSpacenav/libspnav/archive/v1.2/libspnav-1.2.tar.gz",
              "sha256": "e675a2476bd407b8d97a33f93c6651ad3ecdfd422916f260bd620f2aec7ca45f"
            }
          ]
        },
        {
            "name": "horizon-eda",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/horizon-eda/horizon/archive/refs/tags/v2.6.0.tar.gz",
                    "sha256": "e7e680a05b92ac8ab4b6a32fb8e3b17bc298245d3d3d9224e9b3f7fb55b81256"
                }
            ]
        }

    ]
}
