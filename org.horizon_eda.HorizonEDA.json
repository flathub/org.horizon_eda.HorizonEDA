{
    "app-id": "org.horizon_eda.HorizonEDA",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "20.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "horizon-eda",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home",
        "--device=dri"
    ],
    "cleanup": [
        "*.a",
        "*.la",
        "/include",
        "/lib/*/*.h",
        "/share/oce-0.18",
        "/share/pkgconfig",
        "/lib/atkmm-1.6",
        "/lib/cairomm-1.0",
        "/lib/gdkmm-3.0",
        "/lib/giomm-2.4",
        "/lib/glibmm-2.4",
        "/lib/gtkmm-3.0",
        "/lib/oce-0.18",
        "/lib/pangomm-1.4",
        "/lib/pkgconfig",
        "/lib/cmake",
        "/lib/sigc++-3.0",
        "/lib/sigc++-2.0"
    ],
    "modules": [
        {
           "name": "mm-common",
           "cleanup": [ "*" ],
           "sources": [
               {
                   "type": "archive",
                   "url": "https://download.gnome.org/sources/mm-common/1.0/mm-common-1.0.3.tar.xz",
                   "sha256": "e81596625899aacf1d0bf27ccc2fcc7f373405ec48735ca1c7273c0fbcdc1ef5"
               }
           ]
        },
        {
            "name": "sigc++",
            "config-opts": [ "--disable-documentation" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libsigc++/2.10/libsigc++-2.10.7.tar.xz",
                    "sha256": "d082a2ce72c750f66b1a415abe3e852df2eae1e8af53010f4ac2ea261a478832"
                }
            ]
        },
        {
            "name": "glibmm",
            "config-opts": [ "-Dbuild-documentation=false" ],
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/glibmm/2.66/glibmm-2.66.1.tar.xz",
                    "sha256": "69bd6b5327716ca2f511ab580a969fd7bf0cd2c24ce15e1d0e530592d3ff209c"
                }
            ]
        },
        {
            "name": "cairomm",
            "config-opts": [ "--disable-documentation" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.cairographics.org/releases/cairomm-1.14.3.tar.xz",
                    "sha256": "0d37e067c5c4ca7808b7ceddabfe1932c5bd2a750ad64fb321e1213536297e78"
                }
            ]
        },
        {
            "name": "pangomm",
            "config-opts": [ "-Dbuild-documentation=false" ],
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/pangomm/2.46/pangomm-2.46.1.tar.xz",
                    "sha256": "c885013fe61a4c5117fda395770d507563411c63e49f4a3aced4c9efe34d9975"
                }
            ]
        },
        {
            "name": "atkmm",
            "config-opts": [ "-Dbuild-documentation=false" ],
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/atkmm/2.28/atkmm-2.28.2.tar.xz",
                    "sha256": "a0bb49765ceccc293ab2c6735ba100431807d384ffa14c2ebd30e07993fd2fa4"
                }
            ]
        },
        {
            "name": "gtkmm",
            "config-opts": [ "-Dbuild-documentation=false" ],
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gtkmm/3.24/gtkmm-3.24.5.tar.xz",
                    "sha256": "856333de86689f6a81c123f2db15d85db9addc438bc3574c36f15736aeae22e6"
                }
            ]
        },
        {
          "name": "libzip",
          "buildsystem": "cmake-ninja",
          "cleanup": [ "/bin", "/share" ],
          "sources": [
            {
              "type": "archive",
              "url": "https://libzip.org/download/libzip-1.7.3.tar.xz",
              "sha256": "a60473ffdb7b4260c08bfa19c2ccea0438edac11193c3afbbb1f17fbcf6c6132"
            }
          ]
        },
        {
          "name": "zeromq",
          "config-opts": ["--disable-static"],
          "cleanup": [ "/bin", "/share" ],
          "sources": [
            {
              "type": "archive",
              "url": "https://github.com/zeromq/libzmq/releases/download/v4.3.4/zeromq-4.3.4.tar.gz",
              "sha256": "c593001a89f5a85dd2ddf564805deb860e02471171b3f204944857336295c3e5"
            }
          ]
        },
        {
            "name": "libgit2",
            "buildsystem": "cmake",
            "config-opts": [ "-DBUILD_SHARED_LIBS:BOOL=ON",
                             "-DTHREADSAFE=ON" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/libgit2/libgit2/archive/v1.1.1.tar.gz",
                    "sha256": "13a525373f64c711a00a058514d890d1512080265f98e0935ab279393f21a620"
                }
            ]
        },
        {
            "name": "glm",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/g-truc/glm/releases/download/0.9.9.5/glm-0.9.9.5.zip",
                    "sha256": "4fe34860ce69156f63eea6c3d84c91cadfc330353cf275ff394aef4e163cafee"
                }
            ],
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DGLM_TEST_ENABLE=OFF",
                "-DCMAKE_INSTALL_LIBDIR=lib"
            ]
        },
        {
            "name": "boost",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://boostorg.jfrog.io/artifactory/main/release/1.76.0/source/boost_1_76_0.tar.bz2",
                    "sha256": "f0397ba6e982c4450f27bf32a2a83292aba035b827a5623a14636ea583318c41"
                }
            ],
            "buildsystem": "simple",
            "cleanup": [ "/lib" ],
            "build-commands": [
                "./bootstrap.sh --prefix=/app --with-libraries=context,date_time,filesystem,iostreams,locale,program_options,regex,system,thread,test",
                "./b2 -j $FLATPAK_BUILDER_N_JOBS install"
            ]
        },
        {
            "name": "libXmu",
            "cleanup": [ "/share", "/lib" ],
            "sources": [
            {
              "type": "archive",
              "url": "https://www.x.org/archive//individual/lib/libXmu-1.1.3.tar.gz",
              "sha256": "5bd9d4ed1ceaac9ea023d86bf1c1632cd3b172dce4a193a72a94e1d9df87a62e"
            }
          ]
        },
        {
            "name": "opencascade",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://git.dev.opencascade.org/gitweb/?p=occt.git;a=snapshot;h=refs/tags/V7_5_0;sf=tgz",
                    "dest-filename": "opencascade.tgz",
                    "sha256": "c8df7d23051b86064f61299a5f7af30004c115bdb479df471711bab0c7166654"
                }
            ],
            "buildsystem": "cmake-ninja",
            "cleanup": [ "/share" ],
            "config-opts": [
                "-DCMAKE_INSTALL_PREFIX=/app",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DBUILD_LIBRARY_TYPE=Shared",
                "-DBUILD_Inspector=OFF",
                "-DBUILD_DOC_Overview=OFF",
                "-DBUILD_MODULE_ApplicationFramework=ON",
                "-DBUILD_MODULE_DataExchange=ON",
                "-DBUILD_MODULE_Draw=OFF",
                "-DBUILD_MODULE_FoundationClasses=ON",
                "-DBUILD_MODULE_ModelingAlgorithms=ON",
                "-DBUILD_MODULE_ModelingData=ON",
                "-DBUILD_MODULE_Visualization=OFF",
                "-DUSE_VTK=OFF",
                "-DUSE_TBB=OFF",
                "-DINSTALL_FREETYPE=OFF",
                "-DINSTALL_SAMPLES=OFF",
                "-DINSTALL_TEST_CASES=OFF"
            ]
        },
        {
          "name": "cppzmq",
          "buildsystem": "cmake-ninja",
          "cleanup": [ "/bin", "/share" ],
          "config-opts": [
            "-DCPPZMQ_BUILD_TESTS=OFF"
          ],
          "sources": [
            {
              "type": "archive",
              "url": "https://github.com/zeromq/cppzmq/archive/v4.7.1.tar.gz",
              "sha256": "9853e0437d834cbed5d3c223bf1d755cadee70e7c964c6e42c4c6783dee5d02c"
            }
          ]
        },
        {
          "name": "podofo",
          "buildsystem": "cmake-ninja",
          "cleanup": [ "/bin", "/share", "/lib/pkgconfig"],
          "config-opts": [
            "-DPODOFO_BUILD_LIB_ONLY=1",
            "-DPODOFO_BUILD_SHARED=1",
            "-DPODOFO_BUILD_STATIC=0"
          ],
          "sources": [
            {
              "type": "archive",
              "url": "https://downloads.sourceforge.net/project/podofo/podofo/0.9.7/podofo-0.9.7.tar.gz",
              "sha256": "7cf2e716daaef89647c54ffcd08940492fd40c385ef040ce7529396bfadc1eb8"
            }
          ]
        },
        {
            "name": "horizon-eda",
            "buildsystem": "simple",
            "build-commands": [
                "make -j $FLATPAK_BUILDER_N_JOBS INC_OCE=-I/app/include/opencascade LDFLAGS=\"-lm -lpthread\"",
                "make PREFIX=/app/ install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/horizon-eda/horizon/archive/refs/tags/v2.0.0.tar.gz",
                    "sha256": "978fab9a20d367abfb785ef592e61648d0b21c8e573a7556325035e23f0110c3"
                }
            ]
        }

    ]
}
